@model Reminder.ViewModels.ReminderDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reminder Details</h2>

<div>
    <h4>View Reminder: @Model.ReminderItem.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Title: </dt>
        <dd>@Model.ReminderItem.Title</dd>
        <dt>Due Date: </dt>
        <dd>@Model.ReminderItem.DueDate.ToString("dd MMMM yyyy")</dd>
        <dt>Description: </dt>
        <dd>@Model.ReminderItem.Description</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to My Reminders", "MyReminders", "Home")
</p>
